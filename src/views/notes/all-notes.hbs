<div class="row">
	{{#each notes}}
		<div class="col-md-3">
			<div class="card rounded">
				<div class="card-body">
					<h4
						class="card-title d-flex justify-content-between align-items-center"
					>{{title}}
						<a href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a></h4>
					<p>{{description}}</p>
					<form action="/notes/delete/{{_id}}?_method=delete" method="post">
						<input type="hidden" name="_method" value="delete" />
						<button class="btn btn-danger btn-block btn-sm" type="submit">
							Delete
						</button>
					</form>

				</div>
			</div>
		</div>
	{{/each}}
</div>