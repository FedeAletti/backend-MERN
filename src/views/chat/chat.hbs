<div class="d-flex justify-content-between">
	<div>
		<h1>Chat</h1>
	</div>
	<div id="div-compress"></div>
</div>
<div class="mx-auto mt-3">
	<div class="row">
		<div class="col-md-4">
			{{#if user}}
				<div class="card p-2">
					<div class="form-group d-grid gap-2">
						<input
							type="email"
							name="email"
							placeholder="Email"
							id="email"
							value="{{this.email}}"
							readonly="readonly"
							class="form-control py-2"
						/>
						<input
							type="text"
							name="name"
							placeholder="Name"
							id="name"
							value="{{this.name}}"
							readonly="readonly"
							class="form-control py-2"
						/>
						<input
							type="text"
							name="surname"
							placeholder="Surname"
							id="surname"
							class="form-control py-2"
							autofocus
						/>
						<div class="d-flex gap-2">
							<input
								type="number"
								name="age"
								placeholder="Age"
								id="age"
								class="form-control py-2"
							/>
							<input
								type="text"
								name="nickname"
								placeholder="Nickname"
								id="nickname"
								class="form-control py-2"
							/>
						</div>
						<input
							type="text"
							name="avatar"
							placeholder="Avatar"
							id="avatar"
							value="{{this.avatar}}"
							readonly="readonly"
							class="form-control py-2"
						/>
						<textarea
							type="text"
							name="text"
							placeholder="Message"
							id="msg-box"
							class="form-control py-2"
						></textarea>
						<div class="text-center">
							<button class="btn btn-primary w-100" id="sendMessage">
								Send
							</button>
						</div>
					</div>
				</div>
			{{/if}}
		</div>
		<div class="col-md-8">
			<div id="div-chats"></div>
		</div>
	</div>

</div>