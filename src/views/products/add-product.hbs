<div class="row"><div class="col-md-4 mx-auto">
		<div class="card text-center">
			<div class="card-header">
				<h3>New Product</h3>
			</div>
			<div class="card-body">
				<form
					action="/products/add"
					method="post"
					class="d-flex flex-column gap-3"
				>
					<div class="form-group">
						<input
							type="text"
							name="name"
							class="form-control"
							placeholder="Name"
							required
							autofocus
						/>
					</div>
					<div class="form-group">
						<input
							type="text"
							name="price"
							class="form-control"
							required
							placeholder="Price"
						/>
					</div>
					<div class="form-group">
						<input
							type="text"
							name="stock"
							class="form-control"
							required
							placeholder="Stock"
						/>
					</div>
					<div class="form-group">
						<input
							type="text"
							name="thumbnail"
							class="form-control"
							required
							placeholder="Thumbnail"
						/>
					</div>
					<div class="form-group">
						<textarea
							type="text"
							name="description"
							class="form-control"
							required
							placeholder="Description"
						></textarea>
					</div>
					<div class="form-group">
						<button
							class="btn btn-primary btn-block w-75"
							type="submit"
						>Save</button>
					</div>
				</form>
			</div>
		</div>
	</div></div>