<div class="row">
	<div class="col-md-4 mx-auto">
		<div class="card">
			<div class="card-header">
				<div class="d-flex justify-content-between align-items-center">
					Account Register
					<i class="fa fa-user-plus" aria-hidden="true"></i>
				</div>
			</div>
			<div class="card-body">
				<form action="/users/signup" method="post">
					<div class="form-group">
						<input
							type="text"
							name="name"
							class="form-control"
							placeholder="Name"
							{{#if name}}
								value="{{name}}"
							{{/if}}
						/>
					</div>
					<div class="form-group">
						<input
							type="email"
							name="email"
							class="form-control"
							placeholder="Email"
							{{#if email}}
								value="{{email}}"
							{{/if}}
						/>
					</div>
					<div class="form-group">
						<input
							type="password"
							name="password"
							class="form-control"
							placeholder="Password"
						/>
					</div>
					<div class="form-group">
						<input
							type="password"
							name="confirm_password"
							class="form-control"
							placeholder="Confirm Password"
						/>
					</div>
					<button type="submit" class="btn btn-primary btn-block">
						Register
					</button>
				</form>
			</div>
		</div>
	</div>
</div>